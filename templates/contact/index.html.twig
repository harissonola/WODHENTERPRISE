  <div class="container">
    <main id="" class="py-3 mt-2">
      <div class="pagetitle">
        <h1>Contact</h1>
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb breadcrumb-style2">
            <li class="breadcrumb-item">
              <a href="{{ path('app_main') }}" class="text-primary">Accueil</a>
            </li>
            <li class="breadcrumb-item active">Contact</li>
          </ol>
        </nav>
      </div>
      <!-- End Page Title -->

      {# Map mais cacher pour verifier par GPT si s'ai posible de mettre une latitude et une logitude fixe #}
      {# <div class="container">
        <link rel="stylesheet" href="/sneat/assets/vendor/libs/leaflet/leaflet.css" />
        <div class="leaflet-map" id="basicMap"></div>
      </div> #}

      <section class="section contact">
        <div class="row gy-4">
          <div class="col-xl-6">
            <div class="row">
              <div class="col-lg-6">
                <div class="info-box card">
                  <i class="bi bi-geo-alt"></i>
                  <h3>Notre Adresse</h3>
                  <p>
                    405 C, Segbeya Sud,<br />Cotonou, Benin
                  </p>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="info-box card">
                  <i class="bi bi-telephone"></i>
                  <h3>Contactez Nous</h3>
                  <p>
                    +229 01 405 921 57<br />+229 01 674 039 38
                  </p>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="info-box card">
                  <i class="bi bi-envelope"></i>
                  <h3>Nos Emails</h3>
                  <p>
                    info.wodh.enter@gmail.com<br />contact.wodh.enter@gmail.com
                  </p>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="info-box card">
                  <i class="bi bi-clock"></i>
                  <h3>Heures d'Ouverture</h3>
                  <p>
                    Lundi - Samedi<br />9 H 00 - 20 H 00
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-6">
            <div class="card p-4">
              {{ form_start(form) }}
              <div class="row gy-4">
                <div class="col-md-12">
                  {% for label, messages in app.flashes %}
                    {% for message in messages %}
                      <div class="alert alert-{{ label }} alert-dismissible py-4 mt-5" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                      </div>
                    {% endfor %}
                  {% endfor %}
                </div>
                <div class="col-md-6">{{ form_row(form.name) }}</div>
                <div class="col-md-6">{{ form_row(form.email) }}</div>

                <div class="col-md-12">{{ form_row(form.subject) }}</div>

                <div class="col-md-12">{{ form_row(form.message) }}</div>

                <div class="col-md-12 text-center">{{ form_row(form.save) }}</div>
              </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->
  </div>

  <!-- Vendor JS Files -->
