                        <option value="fr">Francais</option>
                        <option value="de">German</option>
                        <option value="pt">Portuguese</option>
                      </select>
                    </div>
                    <div class="mb-3 col-md-6">
                      <label for="currency" class="form-label">Monnaie</label>
